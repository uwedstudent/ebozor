    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-outline-primary my-3"
      data-toggle="modal"
      data-target="#exampleModal"
    >
      Yangi mahsulot qo'shish
    </button>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Yangi mahsulot</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/admin/product" method="POST">
              <label for="productName">Mahsulot nomi*</label>
              <input
                type="text"
                name="productName"
                id="productName"
                placeholder="Mahsulot nomi"
                class="form-control my-2"
                required
              />
              <label for="productBrand">Mahsulot modeli*</label>
              <input
                type="text"
                name="productBrand"
                id="productBrand"
                placeholder="Mahsulot modeli"
                class="form-control my-2"
                required
              />
              <label for="oldPrice">Narxi*</label>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input
                  type="text"
                  name="oldPrice"
                  class="form-control"
                  id="oldPrice"
                  aria-label="Amount (to the nearest dollar)"
                />
                <div class="input-group-append">
                  <span class="input-group-text">.00</span>
                </div>
              </div>
              <label for="salePrice">Chegirilgan narxi</label>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <input
                  type="text"
                  name="salePrice"
                  class="form-control"
                  id="salePrice"
                  aria-label="Amount (to the nearest dollar)"
                />
                <div class="input-group-append">
                  <span class="input-group-text">.00</span>
                </div>
              </div>
              <p>Kategoriyasi*</p>
              <select name="category" class="form-control" id="category">
                <% for(category of categories) { %>
                <option value="<%= category.category_name%>">
                  <%= category.category_name%>
                </option>
                <% } %>
              </select>
              <br />
              <br />
              <label for="description">Mahsulot haqida ma'lumot*</label>
              <textarea
                name="description"
                id="description"
                class="w-100 form-control"
                placeholder="Mahsulot haqida ma'lumot"
              ></textarea>
              <br />
              <button type="submit" id="submitBtn" class="btn btn-success">
                Qo'shish
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

