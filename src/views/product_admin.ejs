<section
  class="d-flex w-100 flex-column align-items-center justify-content-center"
>
  <div class="container d-flex flex-column">
    <% var error %> <%if(error) { %>
    <div class="alert alert-danger"><%= error%></div>
    <% } %>
    <div class="row justify-content-center">
      <% for(product of products ) { %>
      <div class="col-lg-4 mb-2 col-md-6 col-12">
        <div class="card">
          <label for="productPhoto<%=product._id %>">
            <img
              style="object-fit: cover"
              src="<%= product.photo ?
                `/img/admin/product/${product._id}.jpg` :
                'https://via.placeholder.com/300' %>"
              class="card-img-top"
            />
          </label>
          <input
            type="file"
            class="sr-only productPhoto"
            id="productPhoto<%=product._id %>"
          />
          <div class="card-body">
            <h3 class="card-title">
              <span><%= product.brand%></span>&nbsp;<%= product.model %>
            </h3>
            <p>
              Price: $<%= product.salePrice ? product.salePrice :
              product.oldPrice %>
            </p>
            <p><%= product.description%></p>
            <a href="/admin/product/<%= product._id%>">Delete</a>
          </div>
        </div>
      </div>
      <% } %>
