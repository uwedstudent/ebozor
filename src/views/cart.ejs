<%- include("containers/header") %> <%- include("containers/navbar") %>
<!-- Start Cart Area -->
<% if(cart.length===0) { %>
<div class="container text-center my-5 py-5">
<h3>Savatchada mahsulotlar mavjud emas</h3>
</div>   
<% } else { %> 
  <section class="cart-area ptb-100">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <form>
          <div class="cart-table table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col">Name</th>
                  <th scope="col">Unit Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                <% for(product of products) { %>
                <tr>
                  <td class="product-thumbnail">
                    <a href="#">
                      <img
                        src="<%= product.products[0].photo ?
                      `/img/admin/product/${product.products[0]._id}.jpg` :
                      'https://via.placeholder.com/300' %>"
                        alt="item"
                      />
                    </a>
                  </td>
                  <td class="product-name">
                    <a href="#">
                      <span class="text-bolder">
                        <%=product.products[0].brand %>
                      </span>
                      <%=product.products[0].model %>
                    </a>
                  </td>
                  <td class="product-price">
                    <span>$</span>
                    <span class="unit-amount"
                      ><%=product.products[0].salePrice ?
                      product.products[0].salePrice :
                      product.products[0].oldPrice %></span
                    >
                  </td>
                  <td class="product-quantity">
                    <div class="input-counter">
                      <span class="minus-btn">
                        <i class="bx bx-minus"></i>
                      </span>
                      <input
                        name="<%=product.product_id %>"
                        class="product-amount"
                        type="text"
                        value="<%= product.count %>"
                      />
                      <span class="plus-btn">
                        <i class="bx bx-plus"></i>
                      </span>
                    </div>
                  </td>
                  <td class="product-subtotal">
                    <span
                      class="subtotal-amount"
                      name="<%=product.product_id %>"
                    ></span>
                    <a
                      href="/cart/delete?product_id=<%=product.product_id %>&user_id=<%=product.user_id %>"
                      class="remove"
                    >
                      <i class="bx bx-trash"></i>
                    </a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <div class="cart-buttons">
            <div class="row align-items-center">
              <div class="col-lg-7 col-sm-7 col-md-7">
                <a href="shop-1.html" class="default-btn"> Back to Shop </a>
              </div>
              <div class="col-lg-5 col-sm-5 col-md-5 text-right">
                <a href="" class="default-btn" id="updateCart"> Update Cart </a>
              </div>
            </div>
          </div>

          <div class="cart-totals">
            <h3>Cart Totals</h3>
            <ul>
              <li class="">
                Total
                <span>
                  <b>
                    $
                    <span class="total-price"></span>
                  </b>
                </span>
              </li>
              <li class="form-group">
                <label for="fullName"> F.I.O </label>
                <input
                  type="text"
                  id="fullName"
                  name="fullName"
                  class="form-control"
                  autocomplete="off"
                  placeholder="To'liq ism sharifingiz"
                />
              </li>
              <li class="form-group">
                <label for="city"> Shahar </label>
                <input
                  id="city"
                  placeholder="Shahar"
                  type="text"
                  name="city"
                  required
                  class="form-control"
                  autocomplete="off"
                />
              </li>
              <li class="form-group">
                <label for="zipPostal"> Pochta indeksi </label>
                <input
                  type="text"
                  name="zip"
                  id="zipPostal"
                  required
                  placeholder="Pochta indeksi"
                  class="form-control"
                  autocomplete="off"
                />
              </li>
              <div class="form-group">
                <select name="paymentMethod" id="paymentMethod">
                  <option value="click">Click</option>
                  <option value="payme">Pay Me</option>
                  <option value="cash">Naqd</option>
                </select>
              </div>
            </ul>
            <br />
            <br />
            <a href="" class="default-btn checkout"> Buyurtma </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<% } %>

<!-- End Cart Area -->
<script src="/js/cart.js"></script>
<%- include("containers/footer") %>
