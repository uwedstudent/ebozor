<%- include("containers/header") %> 
<% var error %>
<!-- Start Login Area -->
<section class="login-area ptb-100">
  <div class="container">
    <div class="login-form">
      <h2>Kirish</h2>
      <% if(error) { %>
      <div class="alert alert-danger"><%= error%></div>
      <% } %>
      <form action="/login" method="POST">
        <div class="form-group">
          <label>Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            autocomplete="off"
            placeholder="Elektron pochta manzili"
          />
        </div>

        <div class="form-group">
          <label>Parol</label>
          <input
            type="password"
            name="password"
            class="form-control"
            autocomplete="off"
            placeholder="Parol"
          />
        </div>

        <div class="row align-items-center">
          <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="checkme" />
              <label class="form-check-label" for="checkme"
                >Meni eslab qol</label>
            </div>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6 lost-your-password">
            <a href="#" class="lost-your-password">Parolni unutdingizmi?</a>
          </div>
        </div>

        <button type="submit" class="default-btn">Login</button>
      </form>
      <p class="my-3">Yangimisiz. <a href="/signup">Ro'yxatdan o'tish</a></p>
    </div>
  </div>
</section>
<!-- End Login Area -->
<%- include("containers/footer") %> 
